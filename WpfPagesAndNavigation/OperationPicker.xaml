<Page x:Class="OperationPicker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPagesAndNavigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OperationPicker">

    <Border Style="{StaticResource frameBorder}">
        <Grid>
            <StackPanel>
                <TextBlock Text="Age Verification Picker" 
                           VerticalAlignment="Top"  HorizontalAlignment="Center" FontSize="36" 
                           Style="{StaticResource textBlockHeader}"
                           />
                <TextBlock Text="Choose an operation" 
                           VerticalAlignment="Top"  HorizontalAlignment="Center" FontSize="18" 
                           Style="{StaticResource textBlockHeader}"
                           />
            </StackPanel>
        </Grid>
    </Border>
</Page>
