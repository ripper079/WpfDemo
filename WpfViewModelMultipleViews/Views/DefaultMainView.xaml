<UserControl x:Class="DefaultMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfViewModelMultipleViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource frameBorder}">
        <Grid Background="{StaticResource gradiantFrameBackgroundColor}" Margin="{StaticResource StdMarginLarge}">
            <StackPanel>
                <Label Content="Default Main page"                
                        FontSize="28" FontWeight="Bold" 
                        Style="{StaticResource lblStandardStyle}"
               />
                <TextBlock Text="Short description of what this app actually does...." 
                           HorizontalAlignment="Center" FontSize="18"
                           Style="{StaticResource textBlockHeader}" />
                <TextBlock Text="Use upper navigation button for desired action" 
                           HorizontalAlignment="Center" FontSize="10"
                           Style="{StaticResource textBlockHeader}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
